# Server Configuration
PORT=8095
NODE_ENV=development

# Database
# Development (SQLite)
# DATABASE_URL="file:./prisma/dev.db"

# Production (PostgreSQL - Railway e vendos automatikisht)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# JWT Secret (NDRYSHO KËTË NË PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Email Configuration
# Për production DUHET të vendosësh këto:
# 1. Aktivizo 2-Factor Authentication në Gmail
# 2. Krijo Gmail App Password (Settings → Security → App Passwords)
# 3. Përdor App Password 16-karaktere (jo password normal!)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="xxxx xxxx xxxx xxxx"  # 16-char App Password

# URLs
# Development
# SERVER_URL="http://localhost:8095"
# BASE_URL="http://localhost:5173"

# Production (përdor URL-të reale)
SERVER_URL="https://your-railway-app.up.railway.app"
BASE_URL="https://your-cloudflare-app.pages.dev"

# Google OAuth (Opsionale)
GOOGLE_CLIENT_ID=""
